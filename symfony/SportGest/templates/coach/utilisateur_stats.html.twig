{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <h1 class="mb-4">Statistiques des utilisateurs</h1>

        <div class="row">
            <div class="col-md-12 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Nombre total de sportifs</h5>
                        <h2 class="display-4">{{ totalSportifs }}</h2>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Sportifs par niveau</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="sportifsParNiveauChart"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Top 5 des sportifs les plus actifs</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Sportif</th>
                                        <th>Nombre de séances</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for sportif in topSportifs %}
                                    <tr>
                                        <td>{{ sportif.prenom }} {{ sportif.nom }}</td>
                                        <td>{{ sportif.nb_seances }}</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Répartition des séances par type pour chaque sportif</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="seancesParTypeParSportifChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content_footer %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Configuration commune pour les graphiques
            const commonOptions = {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            };

            // Graphique des sportifs par niveau
            new Chart(document.getElementById('sportifsParNiveauChart'), {
                type: 'pie',
                data: {
                    labels: {{ sportifsParNiveau.labels|json_encode|raw }},
                    datasets: [{
                        data: {{ sportifsParNiveau.data|json_encode|raw }},
                        backgroundColor: [
                            'rgb(255, 99, 132)',
                            'rgb(54, 162, 235)',
                            'rgb(255, 205, 86)'
                        ]
                    }]
                },
                options: commonOptions
            });

            // Graphique des séances par type pour chaque sportif
            const sportifsData = {{ seancesParTypeParSportif|json_encode|raw }};
            const types = ['solo', 'duo', 'trio'];
            const datasets = types.map((type, index) => ({
                label: type,
                data: sportifsData.map(sportif => sportif.types[type] || 0),
                backgroundColor: [
                    'rgb(255, 99, 132)',
                    'rgb(54, 162, 235)',
                    'rgb(255, 205, 86)'
                ][index]
            }));

            new Chart(document.getElementById('seancesParTypeParSportifChart'), {
                type: 'bar',
                data: {
                    labels: sportifsData.map(sportif => sportif.nom),
                    datasets: datasets
                },
                options: {
                    ...commonOptions,
                    scales: {
                        x: {
                            stacked: true
                        },
                        y: {
                            stacked: true,
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
{% endblock %} 