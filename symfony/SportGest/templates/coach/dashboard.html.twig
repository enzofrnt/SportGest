{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <div class="container-fluid px-4">
        <div class="row mb-4">
            <div class="col-12">
                <h1 class="display-4">
                    <i class="fas fa-tachometer-alt me-3"></i>Bienvenue {{ app.user.prenom }} {{ app.user.nom }}
                </h1>
                <hr class="my-4">
            </div>
        </div>

        <div class="row g-4">
            <div class="col-xl-3 col-md-6">
                <div class="card bg-gradient-primary h-100 shadow">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-white-50 text-uppercase mb-2">Séances aujourd'hui</h6>
                                <h2 class="text-white display-4 mb-0">{{ stats.seances_du_jour }}</h2>
                            </div>
                            <div class="rounded-circle bg-white bg-opacity-25 p-3">
                                <i class="fas fa-calendar-day fa-2x text-white"></i>
                            </div>
                        </div>
                        <div class="mt-3 text-white-50">
                            <span><i class="fas fa-calendar-alt me-1"></i>Total: {{ stats.total_seances }} séances</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card bg-gradient-success h-100 shadow">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-white-50 text-uppercase mb-2">Sportifs</h6>
                                <h2 class="text-white display-4 mb-0">{{ stats.total_sportifs }}</h2>
                            </div>
                            <div class="rounded-circle bg-white bg-opacity-25 p-3">
                                <i class="fas fa-users fa-2x text-white"></i>
                            </div>
                        </div>
                        <div class="mt-3 text-white-50">
                            <span><i class="fas fa-user-check me-1"></i>Sportifs actifs</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card bg-gradient-info h-100 shadow">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-white-50 text-uppercase mb-2">Exercices</h6>
                                <h2 class="text-white display-4 mb-0">{{ stats.total_exercices }}</h2>
                            </div>
                            <div class="rounded-circle bg-white bg-opacity-25 p-3">
                                <i class="fas fa-dumbbell fa-2x text-white"></i>
                            </div>
                        </div>
                        <div class="mt-3 text-white-50">
                            <span><i class="fas fa-check-circle me-1"></i>Exercices disponibles</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card bg-gradient-warning h-100 shadow">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-white-50 text-uppercase mb-2">Revenus du mois</h6>
                                <h2 class="text-white display-4 mb-0">{{ stats.revenus_mois }}€</h2>
                            </div>
                            <div class="rounded-circle bg-white bg-opacity-25 p-3">
                                <i class="fas fa-euro-sign fa-2x text-white"></i>
                            </div>
                        </div>
                        <div class="mt-3 text-white-50">
                            <span><i class="fas fa-chart-line me-1"></i>Ce mois-ci</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4 mt-2">
            <div class="col-xl-8">
                <div class="card shadow h-100">
                    <div class="card-header py-3">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-chart-bar me-2"></i>Statistiques des séances
                        </h5>
                    </div>
                    <div class="card-body">
                        <canvas id="seancesChart" height="300"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-xl-4">
                <div class="card shadow h-100">
                    <div class="card-header py-3">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-calendar-check me-2"></i>Prochaines séances
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Type</th>
                                        <th>Statut</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for seance in prochaines_seances %}
                                    <tr>
                                        <td>
                                            <i class="far fa-calendar me-2"></i>
                                            {{ seance.dateHeure|date('d/m/Y H:i') }}
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">
                                                {{ seance.typeSeance.value }}
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-{{ seance.statut.value == 'prévue' ? 'warning' : (seance.statut.value == 'validée' ? 'success' : 'danger') }}">
                                                <i class="fas fa-circle me-1"></i>
                                                {{ seance.statut.value }}
                                            </span>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header py-3">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-file-invoice-dollar me-2"></i>Dernières fiches de paie
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th>Période</th>
                                        <th>Montant</th>
                                        <th>Statut</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for fiche in derniere_fiches %}
                                    <tr>
                                        <td>
                                            <i class="fas fa-calendar-alt me-2"></i>
                                            {{ fiche.periode.value }}
                                        </td>
                                        <td>
                                            <i class="fas fa-euro-sign me-2"></i>
                                            {{ fiche.montantTotal }}€
                                        </td>
                                        <td>
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle me-1"></i>
                                                Payée
                                            </span>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% block stylesheets %}
    <style>
        .bg-gradient-primary {
            background: linear-gradient(45deg, #4e73df 0%, #224abe 100%);
        }
        .bg-gradient-success {
            background: linear-gradient(45deg, #1cc88a 0%, #13855c 100%);
        }
        .bg-gradient-info {
            background: linear-gradient(45deg, #36b9cc 0%, #258391 100%);
        }
        .bg-gradient-warning {
            background: linear-gradient(45deg, #f6c23e 0%, #dda20a 100%);
        }
        .card {
            border: none;
            border-radius: 0.75rem;
        }
        .card-header {
            border-top-left-radius: 0.75rem !important;
            border-top-right-radius: 0.75rem !important;
            background-color: var(--sidebar-bg) !important;
        }
        .card-header .card-title {
            color: var(--sidebar-menu-color) !important;
        }
        .table > :not(caption) > * > * {
            padding: 1rem;
        }
        .table thead {
            background-color: var(--sidebar-bg);
            color: var(--sidebar-menu-color);
        }
    </style>
    {% endblock %}

    {% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Récupération des couleurs du thème
        const computedStyle = window.getComputedStyle(document.body);
        const textColor = computedStyle.color;
        const fontFamily = getComputedStyle(document.documentElement).getPropertyValue('--font-family').trim() || "'Nunito', 'sans-serif'";

        // Configuration globale de Chart.js
        Chart.defaults.color = textColor;
        Chart.defaults.font.family = fontFamily;

        // Options du graphique
        const options = {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        font: {
                            family: fontFamily,
                            size: 12,
                            weight: '600'
                        },
                        color: textColor,
                        padding: 15,
                        usePointStyle: true,
                        pointStyle: 'circle'
                    }
                },
                tooltip: {
                    backgroundColor: 'rgba(0, 0, 0, 0.8)',
                    titleColor: '#fff',
                    bodyColor: '#fff',
                    padding: 15,
                    cornerRadius: 8,
                    displayColors: true,
                    usePointStyle: true
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: {
                        color: 'rgba(0, 0, 0, 0.1)'
                    }
                },
                x: {
                    grid: {
                        display: false
                    }
                }
            }
        };

        // Graphique des séances par mois
        new Chart(document.getElementById('seancesChart'), {
            type: 'bar',
            data: {
                labels: {{ stats.seances_par_mois.labels|json_encode|raw }},
                datasets: [{
                    label: 'Nombre de séances',
                    data: {{ stats.seances_par_mois.data|json_encode|raw }},
                    backgroundColor: '#4e73df',
                    borderRadius: 6
                }]
            },
            options: options
        });
    </script>
    {% endblock %}
{% endblock %}