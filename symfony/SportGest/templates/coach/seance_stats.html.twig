{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <h1 class="mb-4">Statistiques des séances</h1>

        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Séances par mois</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="seancesParMoisChart"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Séances par type</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="seancesParTypeChart"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Séances par statut</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="seancesParStatutChart"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Séances par niveau</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="seancesParNiveauChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content_footer %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Configuration commune pour les graphiques
            const commonOptions = {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            };

            // Graphique des séances par mois
            new Chart(document.getElementById('seancesParMoisChart'), {
                type: 'line',
                data: {
                    labels: {{ seancesParMois.labels|json_encode|raw }},
                    datasets: [{
                        label: 'Nombre de séances',
                        data: {{ seancesParMois.data|json_encode|raw }},
                        borderColor: 'rgb(75, 192, 192)',
                        tension: 0.1
                    }]
                },
                options: commonOptions
            });

            // Graphique des séances par type
            new Chart(document.getElementById('seancesParTypeChart'), {
                type: 'pie',
                data: {
                    labels: {{ seancesParType.labels|json_encode|raw }},
                    datasets: [{
                        data: {{ seancesParType.data|json_encode|raw }},
                        backgroundColor: [
                            'rgb(255, 99, 132)',
                            'rgb(54, 162, 235)',
                            'rgb(255, 205, 86)'
                        ]
                    }]
                },
                options: commonOptions
            });

            // Graphique des séances par statut
            new Chart(document.getElementById('seancesParStatutChart'), {
                type: 'doughnut',
                data: {
                    labels: {{ seancesParStatut.labels|json_encode|raw }},
                    datasets: [{
                        data: {{ seancesParStatut.data|json_encode|raw }},
                        backgroundColor: [
                            'rgb(255, 99, 132)',
                            'rgb(75, 192, 192)',
                            'rgb(255, 205, 86)'
                        ]
                    }]
                },
                options: commonOptions
            });

            // Graphique des séances par niveau
            new Chart(document.getElementById('seancesParNiveauChart'), {
                type: 'bar',
                data: {
                    labels: {{ seancesParNiveau.labels|json_encode|raw }},
                    datasets: [{
                        label: 'Nombre de séances',
                        data: {{ seancesParNiveau.data|json_encode|raw }},
                        backgroundColor: 'rgb(75, 192, 192)'
                    }]
                },
                options: commonOptions
            });
        });
    </script>
{% endblock %} 